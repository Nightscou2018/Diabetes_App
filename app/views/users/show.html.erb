<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        
      </h1>
    </section>
    </div>
  </aside>
  <div class="col-md-8">
    <% if @user.diary_entries.any? %>
      <h3>My Diabetes Diary (<%= @user.diary_entries.count %>)</h3>
      <ol class="diary_entries">
        <%= render @diary_entries %>
      </ol>
      <%= will_paginate @diary_entries %>
    <% end %>
  </div>

  

    

    
