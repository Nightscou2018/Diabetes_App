<% provide(:title, "Bolus Rechner") %>

<%#= javascript_include_tag "Bolus_Rechner"%>


           
            <h1 class="text-center">My Diabetes Diary</h1>
  
      
        
            <h2 class="text-center heading-bolus">Bolus Calculator</h2>
             <h4 class="text-center text-muted" id="Uhrzeit"></h4>
          
     
    
    

      <div class="container">
  <%= form_tag(diary_entry_path) do %>
    <div class="form-group row top buffer">
    
      <label for="be" class="offset-sm-4 col-sm-2 col-form-label text-left">eaten Carbohydrates (in BU)</label>
      <div class="col-sm-2">
        <input type="number" min="0" class="form-control" id="be" name="diary_entry[carbohydrates]">
        <!--<small id="be-info" class="form-text text-muted">
              (Hier können Sie die gegessenen Kohlenhydrate in Broteinheiten eingeben.) 
        </small>-->
      </div>
    </div>
    <div class="form-group row">
      <label for="faktor" class="offset-sm-4 col-sm-2 col-form-label">BU Factor</label>
      <div class="col-sm-2">
        <input type="number" min="0" class="form-control" id="faktor" name="faktor" value="">
        <!--<small id="faktor" class="form-text text-muted">
                (Hier können Sie den aktuellen BE-Faktor ändern, wenn nötig.) 
        </small>-->
        </div>
       
    </div>
    <div class="row">
      <div class= "offset-sm-4 col-sm2 ">
        <button type="button" class="btn btn-primary btn-md" onclick="insulinBerechnen()">Calculate Insulin</button>
      </div>
      <div class= "col-sm2 ">
        <button type="submit" name="commit" class="btn btn-success btn-md">Save to my Diary</button>
      </div>
      </div>
    <% end%>
     <div class="row top-buffer"> 
      <div class="offset-sm-4 col-sm-4 lead bg-warning">
            
              You have to inject <strong id="insulin"></strong> U (Insulin Units)
            
      </div>
      </div>
      </div>
  </form>
  
  
 




  